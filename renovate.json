{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)",
    "group:monorepos",
    "group:recommended",
    "npm:unpublishSafe",
    ":dependencyDashboard"
  ],

  "labels": ["dependencies"],
  "baseBranches": ["development"]
  "rangeStrategy": "bump",
  "timezone": "Europe/Berlin",

  "packageRules": [
    {
      "description": "Group Next.js ecosystem updates",
      "matchPackageNames": [
        "next",
        "react",
        "react-dom",
        "@next/*",
        "@vercel/*"
      ],
      "groupName": "nextjs stack",
      "semanticCommitScope": "nextjs"
    },

    {
      "description": "Group TypeScript ecosystem updates",
      "matchPackageNames": [
        "typescript",
        "tslib",
        "@types/*",
        "eslint",
        "@typescript-eslint/*"
      ],
      "groupName": "typescript stack",
      "semanticCommitScope": "ts"
    },

    {
      "description": "Group linting & formatting tools",
      "matchPackagePatterns": [
        "^eslint",
        "^prettier"
      ],
      "groupName": "linting",
      "semanticCommitScope": "lint"
    },

    {
      "description": "Group patch & minor updates and auto-merge them",
      "matchUpdateTypes": ["patch", "minor"],
      "automerge": true,
      "automergeType": "pr",
      "semanticCommitScope": "deps"
    },

    {
      "description": "Major versions require manual review",
      "matchUpdateTypes": ["major"],
      "labels": ["dependencies", "major-update"],
      "automerge": false
    },

    {
      "description": "Update GitHub Actions",
      "matchManagers": ["github-actions"],
      "semanticCommitScope": "gh-actions",
      "groupName": "github actions"
    }
  ]
}
